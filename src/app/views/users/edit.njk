{% extends 'layout.njk' %}

{% block content %}

<section class="container form">
<form action="/user?_method=PUT" method="post">
    <div class="header"><strong>Editar perfil</strong></div>

    <div class="fields">

        {% include 'users/fields.njk' %}

        <input type="hidden" name="id" value="{{ user.id }}">
    </div>

    <button type="submit">Salvar</button>
</form>

<form action="/user?_method=DELETE" method="post" class="form-delete">
    <input type="hidden" name="id" value="{{ user.id }}">
    <button type="submit" id="delete-profile"><i class="material-icons">delete</i>Apagar conta</button>
</form>
</section>

{% include 'includes/confirm-delete.njk' %}
{% endblock content %}